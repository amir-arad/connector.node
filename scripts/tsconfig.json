{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "bin",
    "rootDir": "src",
    "lib":["ES6"],
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "skipDefaultLibCheck": true
  },
  "exclude": [
    "../public/scripts",
    "bin",
    "../node_modules"
  ]
}